<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e4e3e4">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Got it!"
        android:id="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView"
        android:background="@drawable/swipe_picture"
        android:visibility="visible"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="73dp"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="250dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Swipe left or right when you watched the next episode"
        android:textColor="#656565"
        android:id="@+id/textView9"
        android:layout_below="@+id/imageView"
        android:textStyle="normal"
        android:gravity="center"
        android:visibility="visible"
        android:textSize="14dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView2"
        android:background="@drawable/icon_click"
        android:visibility="visible"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="73dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Click on series name for more options"
        android:textColor="#656565"
        android:id="@+id/textView10"
        android:textStyle="normal"
        android:gravity="center"
        android:visibility="visible"
        android:textSize="14dp"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="@string/plus"
        android:id="@+id/button"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:background="@drawable/button_shape_plus"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:typeface="monospace"

        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="110dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="click the "
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/button"
        android:textSize="12dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="55dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="to add new series for following"
        android:id="@+id/textView12"
        android:textSize="12dp"
        android:layout_alignTop="@+id/textView11"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="5dp"/>

    <View
        android:layout_width="135dp"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/button"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/view2"></View>

    <View
        android:layout_width="135dp"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:visibility="visible"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/view3"
        android:layout_below="@+id/imageView3"></View>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/demo_tutorial_picture"
        android:layout_alignParentLeft="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="now you follow this series"
        android:id="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view2"
        android:layout_marginTop="25dp"/>

</RelativeLayout>